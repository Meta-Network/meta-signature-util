{
  "exclude": ["test", "lib"],
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "outDir": "./lib",
    "rootDir": "./src",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./*"],
      "src/*": ["./src/*"]
    },
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true
  }
}
